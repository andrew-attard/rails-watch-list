<div class="container mt-3">
  <h1>Add Movie to <%= @list.name %></h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, collection: @movies, prompt: 'Select Movie' %>
    <%= f.submit 'Add', class: 'btn btn-danger' %>
  <% end %>
</div>
<%= link_to 'Cancel', lists_path, class: 'btn-light opacity-25 text-decoration-none' %>
